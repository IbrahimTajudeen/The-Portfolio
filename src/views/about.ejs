<main class="main">

    <!-- About Section -->
    <section id="about" class="about section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>About</h2>
        <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit. Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium totam rem aperiam</p>
      </div><!-- End Section Title -->

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <!-- Intro + Photo -->
        <div class="row align-items-center justify-content-between gy-5 mb-5">
          <div class="col-lg-7" data-aos="fade-right" data-aos-delay="150">
            <div class="intro-content">
              <span class="eyebrow">Hello there</span>
              <h2 class="headline">Hi, I'm <%= data.name %> - <%= data.punch_line %></h2>
              <p class="lead">
                <%= data.full_intro %>
              </p>
              <p>
                <%= data.goal %>
              </p>

              <div class="cta-group">
                <a href="portfolio" class="btn-ghost">
                  View My Work <i class="bi bi-arrow-up-right"></i>
                </a>
                <a href="#" class="link-underline">
                  Download Resume <i class="bi bi-download"></i>
                </a>
              </div>
            </div>
          </div>

          <div class="col-lg-5" data-aos="zoom-in" data-aos-delay="250">
            <figure class="profile-figure text-center text-lg-end">
              <img src="<%= data.image %>" alt="Portrait of Alex" class="img-fluid profile-photo">
            </figure>
          </div>
        </div>
        <!-- End Intro + Photo -->

        <!-- Skills Grid -->
        <div class="mb-5">
          <div class="row g-4">
            <% if(data.craft) {%>
                <% data.craft.map((v) => { %>
                  <div class="col-6 col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="120">
                    <div class="skill-item">
                      <i class="<%= v.icon %>"></i>
                      <h3><%= v.text %></h3>
                      <p><%= v.note %></p>
                    </div>
                  </div>
                <% }) %>
            <% } %>
          </div>
        </div>
        <!-- End Skills Grid -->

        <!-- Journey Timeline -->
        <div class="mb-5">
          <div class="row g-4">
            <% if(data.journey) {%>
                <% data.journey.map((v) => { %>
                  <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="120">
                    <article class="timeline-item">
                      <span class="dot"></span>
                      <time><%= v.year %></time>
                      <h4><%= v.title %></h4>
                      <p><%= v.note %></p>
                    </article>
                  </div>
                <% }) %>
            <% } %>
          </div>
        </div>
        <!-- End Journey Timeline -->

        <!-- Quote -->
        <blockquote class="personal-quote text-center mb-5" data-aos="fade-down" data-aos-delay="200">
          <p>"Building clean and meaningful experiences through thoughtful code and quiet design."</p>
        </blockquote>
        <!-- End Quote -->

        <!-- Fun Facts -->
        <div class="row g-3 justify-content-center">
          <% if(data.hobby) {%>
              <% data.hobby.map((v) => { %>
                <div class="col-6 col-md-3 col-lg-2" data-aos="zoom-in" data-aos-delay="120">
                  <div class="fact-pill">
                    <i class="<%= v.icon %>"></i>
                    <span><%= v.text %></span>
                  </div>
                </div>
              <% }) %>
          <% } %>
        </div>
        <!-- End Fun Facts -->

      </div>

    </section><!-- /About Section -->

    <!-- Skills Section -->
    <section id="skills" class="skills section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Skills</h2>
        <p><%= data.skills.caption %></p>
      </div><!-- End Section Title -->

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row g-4 skills-animation">
          <% if(data.skills.skill_set) {%>
              <% data.skills.skill_set.map((v) => { %>
                <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                  <div class="skill-box">
                    <h3><%= v.title %></h3>
                    <p><%= v.note %></p>
                    <span class="text-end d-block"><%= v.progress %>%</span>
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" aria-valuenow="<%= v.progress %>" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                  </div>
                </div>
              <% }) %>
          <% } %>
        </div>

      </div>

    </section><!-- /Skills Section -->

    <!-- Stats Section -->
    <section id="stats" class="stats section dark-background">

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row align-items-center">
          <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
            <div class="avatars d-flex align-items-center">
              <% data.image_stack.map((v) => { %>
                  <img src="<%= v %>" alt="Avatar <%= v.split('.')[0][0] %>" class="rounded-circle" loading="lazy">
              <% }) %>
            </div>
          </div>

          <div class="col-lg-8">
            <div class="row counters">
              <% if(data.stats) {%>
                  <% data.stats.map((v) => { %>
                    <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                      <h2><span data-purecounter-start="0" data-purecounter-end="<%= v.amount %>" data-purecounter-duration="1" class="purecounter"></span><%= v.symbol %></h2>
                      <p><%= v.text %></p>
                    </div>
                  <% }) %>
              <% } %>
            </div>
          </div>
        </div>
      </div>

    </section><!-- /Stats Section -->

    <!-- Testimonials Section -->
    <section id="testimonials" class="testimonials section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Testimonials</h2>
        <p><%= data.testmonial_caption %></p>
      </div><!-- End Section Title -->

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper init-swiper">
          <script type="application/json" class="swiper-config">
            {
              "loop": true,
              "speed": 600,
              "autoplay": {
                "delay": 5000
              },
              "slidesPerView": "auto",
              "pagination": {
                "el": ".swiper-pagination",
                "type": "bullets",
                "clickable": true
              }
            }
          </script>
          <div class="swiper-wrapper">
            <% if(data.testimonials) {%>
                <% data.testimonials.map((v) => { %>
                  <div class="swiper-slide">
                    <div class="testimonial-item">
                      <div class="row gy-4 justify-content-center">
                        <div class="col-lg-6">
                          <div class="testimonial-content">
                            <p>
                              <i class="bi bi-quote quote-icon-left"></i>
                              <span><%= v.text %></span>
                              <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                            <h3><%= v.name %></h3>
                            <h4><%= v.position %></h4>
                            <div class="stars">
                              <% for(let i = 0; i < v.stars; i++) { %>
                                <i class="bi bi-star-fill"></i>
                              <% } %>
                            </div>
                          </div>
                        </div>
                        <div class="col-lg-2 text-center">
                          <img src="<%= v.image %>" class="img-fluid testimonial-img" alt="">
                        </div>
                      </div>
                    </div>
                  </div><!-- End testimonial item -->
                <% }) %>
            <% } %>
          </div>
          <div class="swiper-pagination"></div>
        </div>

      </div>

    </section><!-- /Testimonials Section -->

  </main>