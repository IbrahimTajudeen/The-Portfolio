<main class="main">

    <!-- Resume Section -->
    <section id="resume" class="resume section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Resume</h2>
        <p>From concept to deployment, I provide end-to-end solutions. Reliable, secure, and tailored to your needs.</p>
      </div><!-- End Section Title -->

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row">
          <div class="col-lg-6">

            <!-- Education Section -->
            <div class="resume-item" data-aos="fade-up">
              <h3 class="resume-title">Education</h3>

              <div class="resume-content">
                <article class="education-item">
                  <h4>Diploma in Computer Programming and Utlizations</h4>
                  <h5>2019 - 2020</h5>
                  <p class="institution"><em>Notion Computer Institute</em></p>
                  <p>Learning the basics of computer programming, and building desktop app with C#</p>
                </article>

                <article class="education-item">
                  <h4>Secondary School Certificate</h4>
                  <h5>2016 - 2019</h5>
                  <p class="institution"><em>Government Secondary School</em></p>
                  <p>Graduate with O'Level Certificate</p>
                </article>

                <article class="education-item">
                  <h4>Primary School Leaving Certificate</h4>
                  <h5>2008 - 2012</h5>
                  <p class="institution"><em>Research Model Nursery & Primary School</em></p>
                </article>
              </div>
            </div><!-- End Education Section -->

            <!-- Professional Skills Section -->
            <div class="resume-item skills-animation" data-aos="fade-up">
              <h3 class="resume-title">Professional Skills</h3>

              <div class="resume-content">
                
                <% data.pro_skills.map((v) => { %>
                  <div class="skill-item">
                    <h4><%= v.title %></h4>
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" aria-valuenow="<%= v.percent %>" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div><!-- End Professional Skills Section -->
          </div>

          <div class="col-lg-6">
            <!-- Experience Section -->
            <div class="resume-item" data-aos="fade-up" data-aos-delay="100">
              <h3 class="resume-title">Professional Experience</h3>

              <div class="resume-content">
                <article class="experience-item">
                  <h4>Junior Backend Engineer</h4>
                  <h5>2025 - Present</h5>
                  <p class="company"><em>StoneTech, Unguwan Sarki Kaduna</em></p>
                  <ul>
                    <li>Work on API Integrations</li>
                    <li>Managing Database</li>
                    <li>Building Backend Systems</li>
                  </ul>
                </article>

                <article class="experience-item">
                  <h4>Lead Backend Engineer</h4>
                  <h5>2025 - Present</h5>
                  <p class="company"><em>Scorche Pay</em></p>
                  <ul>
                    <li>Integrating APIs</li>
                    <li>Oversees and Manage other developers work</li>
                    <li>Build Payment Getways</li>
                    <li>Build scalable backend systems</li>
                  </ul>
                </article>

                <article class="experience-item">
                  <h4>Freelance Developer</h4>
                  <h5>2021 - Present</h5>
                  <p class="company"><em>Upwork, LinkedIn</em></p>
                  <ul>
                    <li>Work on various web and mobile projects</li>
                    <li>Upgrading and Re-write exisiting systems</li>
                    <li>Help Architect Large Systems</li>
                  </ul>
                </article>
              </div>
            </div><!-- End Experience Section -->
          </div>
        </div>

      </div>

    </section><!-- /Resume Section -->

  </main>